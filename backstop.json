{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "phone",
      "width": 360,
      "height": 480
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "desktop",
      "width": 1920,
      "height": 1080
    }
  ],
  "misMatchThreshold": 0,
  "onReadyScript": "puppet/onReady.js",
  "scenarios": [
    {
      "label": "Home page",
      "url": "http://sciety_app"
    },
    {
      "label": "My feed (logged out)",
      "url": "http://sciety_app/my-feed"
    },
    {
      "label": "Sciety feed",
      "url": "http://sciety_app/sciety-feed"
    },
    {
      "label": "Menu page",
      "url": "http://sciety_app/menu"
    },
    {
      "label": "An article meta page",
      "url": "http://sciety_app/articles/meta/10.1101/646810"
    },
    {
      "label": "An article activity page",
      "url": "http://sciety_app/articles/activity/10.1101/646810"
    },
    {
      "label": "An article activity page (expanded reviews)",
      "url": "http://sciety_app/articles/activity/10.1101/646810",
      "clickSelector": ".activity-feed__item-toggle"
    },
    {
      "label": "Article search",
      "url": "http://sciety_app/search?query=elephant+shark"
    },
    {
      "label": "Article search results page error",
      "url": "http://sciety_app/search?query=covid&category=articles&cursor=fake"
    },
    {
      "label": "Group search",
      "url": "http://sciety_app/search?query=peer+community+in+archaeology&category=groups"
    },
    {
      "label": "ScietyHQ user page lists tab",
      "url": "http://sciety_app/users/scietyHQ/lists"
    },
    {
      "label": "ScietyHQ user page following tab",
      "url": "http://sciety_app/users/scietyHQ/following"
    },
    {
      "label": "ScietyHQ saved articles list page",
      "url": "http://sciety_app/users/scietyHQ/lists/saved-articles"
    },
    {
      "label": "Group page, lists tab",
      "url": "http://sciety_app/groups/pci-zoology/lists"
    },
    {
      "label": "Group page, about tab",
      "url": "http://sciety_app/groups/pci-zoology/about"
    },
    {
      "label": "Group page, followers",
      "url": "http://sciety_app/groups/pci-zoology/followers"
    },
    {
      "label": "Group list page",
      "url": "http://sciety_app/groups/pci-zoology/evaluated-articles"
